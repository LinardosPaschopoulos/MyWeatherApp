<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ThreeDayForecastActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:alignmentMode="alignMargins"
        android:columnCount="4"
        android:columnOrderPreserved="false"
        android:rowCount="8"
        android:useDefaultMargins="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="#FFFFFF"
            android:src="@drawable/temperature" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="#FFFFFF"
            android:src="@drawable/humidity" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="#FFFFFF"
            android:src="@drawable/cloud" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:text="00:00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:text="04:00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:text="08:00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:text="12:00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_row="5"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:text="16:00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_row="6"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:text="20:00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_row="7"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:text="Avg."
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/temperature0000"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="center"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/temperature0400"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_gravity="center"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/temperature0800"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_gravity="center"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/temperature1200"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_gravity="center"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/temperature1600"
            android:layout_column="1"
            android:layout_row="5"
            android:layout_gravity="center"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/temperature2000"
            android:layout_column="1"
            android:layout_row="6"
            android:layout_gravity="center"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/temperatureAvg"
            android:layout_column="1"
            android:layout_row="7"
            android:layout_gravity="center"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/humidity0000"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_gravity="center"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/humidity0400"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_gravity="center"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/humidity0800"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_gravity="center"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/humidity1200"
            android:layout_column="2"
            android:layout_row="4"
            android:layout_gravity="center"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/humidity1600"
            android:layout_column="2"
            android:layout_row="5"
            android:layout_gravity="center"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/humidity2000"
            android:layout_column="2"
            android:layout_row="6"
            android:layout_gravity="center"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/humidityAvg"
            android:layout_column="2"
            android:layout_row="7"
            android:layout_gravity="center"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/cloud0000"
            android:layout_column="3"
            android:layout_row="1"
            android:layout_gravity="center"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/cloud0400"
            android:layout_column="3"
            android:layout_row="2"
            android:layout_gravity="center"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/cloud0800"
            android:layout_column="3"
            android:layout_row="3"
            android:layout_gravity="center"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/cloud1200"
            android:layout_column="3"
            android:layout_row="4"
            android:layout_gravity="center"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/cloud1600"
            android:layout_column="3"
            android:layout_row="5"
            android:layout_gravity="center"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/cloud2000"
            android:layout_column="3"
            android:layout_row="6"
            android:layout_gravity="center"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/cloudAvg"
            android:layout_column="3"
            android:layout_row="7"
            android:layout_gravity="center"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>