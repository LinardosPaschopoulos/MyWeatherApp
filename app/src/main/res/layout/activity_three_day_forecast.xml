<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ThreeDayForecastActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:columnCount="8"
        android:rowCount="4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="center"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/temperature"
            android:background="#FFFFFF"
            android:layout_marginTop="4dp"/>

        <ImageView
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="center"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/humidity"
            android:background="#FFFFFF"
            android:layout_marginTop="4dp"/>

        <ImageView
            android:layout_column="0"
            android:layout_row="3"
            android:layout_gravity="center"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/cloud"
            android:background="#FFFFFF"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="center"
            android:text="00:00"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_column="2"
            android:layout_row="0"
            android:layout_gravity="center"
            android:text="04:00"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_column="3"
            android:layout_row="0"
            android:layout_gravity="center"
            android:text="08:00"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_column="4"
            android:layout_row="0"
            android:layout_gravity="center"
            android:text="12:00"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_column="5"
            android:layout_row="0"
            android:layout_gravity="center"
            android:text="16:00"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_column="6"
            android:layout_row="0"
            android:layout_gravity="center"
            android:text="20:00"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_column="7"
            android:layout_row="0"
            android:layout_gravity="center"
            android:text="Avg."
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/temperature0000"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="center"
            android:text="00:00"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/temperature0400"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_gravity="center"
            android:text="04:00"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/temperature0800"
            android:layout_column="3"
            android:layout_row="1"
            android:layout_gravity="center"
            android:text="08:00"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/temperature1200"
            android:layout_column="4"
            android:layout_row="1"
            android:layout_gravity="center"
            android:text="12:00"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/temperature1600"
            android:layout_column="5"
            android:layout_row="1"
            android:layout_gravity="center"
            android:text="16:00"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/temperature2000"
            android:layout_column="6"
            android:layout_row="1"
            android:layout_gravity="center"
            android:text="20:00"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/temperatureAvg"
            android:layout_column="7"
            android:layout_row="1"
            android:layout_gravity="center"
            android:text="Avg."
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/humidity0000"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_gravity="center"
            android:text="00:00"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/humidity0400"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_gravity="center"
            android:text="04:00"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/humidity0800"
            android:layout_column="3"
            android:layout_row="2"
            android:layout_gravity="center"
            android:text="08:00"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/humidity1200"
            android:layout_column="4"
            android:layout_row="2"
            android:layout_gravity="center"
            android:text="12:00"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/humidity1600"
            android:layout_column="5"
            android:layout_row="2"
            android:layout_gravity="center"
            android:text="16:00"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/humidity2000"
            android:layout_column="6"
            android:layout_row="2"
            android:layout_gravity="center"
            android:text="20:00"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/humidityAvg"
            android:layout_column="7"
            android:layout_row="2"
            android:layout_gravity="center"
            android:text="Avg."
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/cloud0000"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_gravity="center"
            android:text="00:00"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/cloud0400"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_gravity="center"
            android:text="04:00"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/cloud0800"
            android:layout_column="3"
            android:layout_row="3"
            android:layout_gravity="center"
            android:text="08:00"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/cloud1200"
            android:layout_column="4"
            android:layout_row="3"
            android:layout_gravity="center"
            android:text="12:00"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/cloud1600"
            android:layout_column="5"
            android:layout_row="3"
            android:layout_gravity="center"
            android:text="16:00"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/cloud2000"
            android:layout_column="6"
            android:layout_row="3"
            android:layout_gravity="center"
            android:text="20:00"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/cloudAvg"
            android:layout_column="7"
            android:layout_row="3"
            android:layout_gravity="center"
            android:text="Avg."
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>